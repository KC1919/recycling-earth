      const data={
        "name":name,
        "phone":phone,
        "email":email,
        "pincode":pincode,
        "message":message
      }

      const response=await fetch("/user/join",{
        method:"POST",
        mode:"cors",
        headers:{"Content-Type":"application/json"},
